<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_rect_white"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <org.ekstep.genie.customview.EkStepCustomTextView
        android:id="@+id/chapter_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:textColor="@color/app_black_theme_color"
        android:textSize="@dimen/font_medium_small"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_chapter_name_lessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chapter_name_dialog"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:id="@+id/tv_download_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_textbook_number_of_lessons"
            android:textColor="@color/app_black_theme_color"
            android:textSize="@dimen/font_medium_small" />

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:id="@+id/tv_download_number_of_lessons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="17"
            android:textColor="@color/app_blue_theme_color"
            android:textSize="@dimen/font_medium_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_chapter_name_lessons"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:id="@+id/tv_total_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_textbook_total_size"
            android:textColor="@color/app_black_theme_color"
            android:textSize="@dimen/font_medium_small" />

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:id="@+id/tv_download_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="50MB"
            android:textColor="@color/app_blue_theme_color"
            android:textSize="@dimen/font_medium_small" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_black_white"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/spacing_small"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_small"
            android:text="@string/label_dialog_cancel"
            android:textColor="@color/selector_color_black_white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:id="@+id/txt_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_35"
            android:background="@drawable/selector_black_white"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/spacing_small"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_small"
            android:text="@string/label_contentdetail_download"
            android:textColor="@color/selector_color_black_white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>