<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/layout_tool_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_selector_dark"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_search_back_new" />

        <!--<org.ekstep.genie.customview.EkStepCustomEditText-->
        <!--android:id="@+id/edt_tool_search"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:background="@null"-->
        <!--android:hint="@string/search"-->
        <!--android:imeOptions="actionSearch|flagNoExtractUi"-->
        <!--android:maxLines="1"-->
        <!--android:paddingRight="@dimen/spacing_normal"-->
        <!--android:singleLine="true"-->
        <!--android:textColor="@color/profile_background"-->
        <!--android:textColorHint="@color/grey2"-->
        <!--android:textSize="16sp" />-->

        <org.ekstep.genie.customview.EkStepCustomAutoCompleteTextView
            android:id="@+id/edt_tool_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_toLeftOf="@+id/btn_tool_search"
            android:background="@null"
            android:hint="@string/label_search"
            android:imeOptions="actionSearch|flagNoExtractUi"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="@dimen/spacing_normal"
            android:textColor="@color/profile_background"
            android:textColorHint="@color/grey2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_tool_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_selector_dark"
            android:clickable="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_search" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
