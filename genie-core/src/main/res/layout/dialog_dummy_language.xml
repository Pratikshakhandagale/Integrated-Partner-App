<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_language_list"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:paddingTop="@dimen/size_8"
            android:text="@string/label_dummy_english"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/layout_hindi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:paddingTop="@dimen/size_8"
            android:text="@string/label_dummy_hindi"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/layout_kannada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:paddingTop="@dimen/size_8"
            android:text="@string/label_dummy_kannada"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/layout_telugu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:paddingTop="@dimen/size_8"
            android:text="@string/label_dummy_telegu"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/layout_marathi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10">

        <org.ekstep.genie.customview.EkStepCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:paddingTop="@dimen/size_8"
            android:text="@string/label_dummy_marathi"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</LinearLayout>