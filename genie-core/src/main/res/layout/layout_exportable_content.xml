<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ekstep="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="-6dp">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/img_content"
            android:layout_width="@dimen/content_icon_dimen"
            android:layout_height="@dimen/content_icon_dimen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_5"
            android:scaleType="fitXY"
            android:src="@drawable/avatar_anonymous" />

        <org.ekstep.genie.customview.EkStepNotoTextView
            android:id="@+id/txt_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/size_5"
            android:text="1234"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/txt_size_16"
            ekstep:fontstyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_tick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:alpha="0.7"
        android:background="@color/black1">

        <ImageView
            android:id="@+id/img_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_normal"
            android:src="@drawable/ic_uncheck" />
    </RelativeLayout>

</android.support.v7.widget.CardView>