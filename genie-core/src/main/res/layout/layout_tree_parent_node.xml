<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/parent_node_height"
    android:background="@color/app_black_theme_color"
    android:minHeight="48dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_yellow_theme_color" />

    <TextView
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="@string/label_textbook_table_of_contents" />

    <ImageView
        android:id="@+id/node_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standard_spacing"
        android:layout_toRightOf="@+id/node_value" />

</RelativeLayout>
