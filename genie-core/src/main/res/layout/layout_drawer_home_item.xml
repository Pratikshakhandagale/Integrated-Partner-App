    android:layout_height="wrap_content">

    <org.ekstep.genie.customview.EkStepCustomTextView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_item_drawer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/spacing_tiny"
        android:background="@drawable/bg_round_edge_rectangle"
        android:drawablePadding="@dimen/size_6"
