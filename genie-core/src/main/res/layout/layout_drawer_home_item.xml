        android:text="@string/label_nav_home"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_15"
        android:textStyle="bold"
        tools:drawableLeft="@drawable/ic_nav_slider_menu_home" />

